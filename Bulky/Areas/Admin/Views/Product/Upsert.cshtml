@model Product

<form asp-controller="Product" asp-action="@(Model.Id == 0 ? "Create" : "Update")" method="post" enctype="multipart/form-data">
   <div class="row col-10">
        <div class="border p-4 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">
                    @(Model.Id == 0 ? "Create Product" : "Edit Product")
                </h2>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-3 row">
                <label asp-for="Title" class="p-0"></label>
                <input asp-for="Title" name="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Description" class="p-0"></label>
                <input asp-for="Description" name="Description" type="text" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="ISBN" class="p-0"></label>
                <input asp-for="ISBN" name="ISBN" type="text" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Author" class="p-0"></label>
                <input asp-for="Author" name="Author" type="text" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Id" class="p-0"></label>
                <select asp-for="Id" class="form-control">
                    <option value="">Select a Category</option>
                    @if (ViewData["Categories"] != null)
                    {
                        foreach (var category in (List<Category>)ViewData["Categories"])
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="mb-3 row">
                <label asp-for="ListPrice" class="p-0"></label>
                <input asp-for="ListPrice" name="ListPrice" type="text" class="form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price" class="p-0"></label>
                <input asp-for="Price" name="Price" type="text" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price50" class="p-0"></label>
                <input asp-for="Price50" name="Price50" type="text" class="form-control" />
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price100" class="p-0"></label>
                <input asp-for="Price100" name="Price100" type="text" class="form-control" />
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="ImageUrl" class="p-0">Image Url</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" asp-action="Upsert" class="btn btn-primary form-control">@(Model.Id == 0 ? "Create" : "Update")</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                </div>
            </div>
        </div>
   </div>
    <div class="row col-2">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/images/@Model.ImageUrl" width="100%" style="border-radius: 5px; border:1px solid white" />
        }
        else
        {
            <img src="~/images/default-placeholder.png" width="100%" style="border-radius: 5px; border:1px solid white" />
        }
    </div>
</form>
