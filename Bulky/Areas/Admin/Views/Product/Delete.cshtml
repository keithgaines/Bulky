@model Bulky.Models.Product

<form method="post">
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product
            </h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" type="text" disabled class="form-control" />
        </div>
        <!-- Remove the DisplayOrder field section -->
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
